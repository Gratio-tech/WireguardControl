{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "ts-node": {
    "transpileOnly": true
  }
}
